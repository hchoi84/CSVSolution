@page
@model IndexModel
@{
  ViewData["Title"] = "Home page";
}

<div class="text-center">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Date</th>
        <th scope="col">Category</th>
        <th scope="col">Count</th>
        <th scope="col">Avg Wait Min</th>
        <th scope="col">Avg Talk Min</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var call in Model.CallSummaries)
      {
        <tr>
          <td>@call.Date.ToString("yyyy-MM-dd")</td>
          <td>@call.Category</td>
          <td>@call.Count</td>
          <td>@call.AvgWaitMin</td>
          <td>@call.AvgTalkMin</td>
        </tr>
        @if (call.EndOfDate)
        {
          <tr>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
            <td></td>
          </tr>
        }
      }
    </tbody>
  </table>
</div>
